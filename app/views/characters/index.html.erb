<h1>Fighters list</h1>

<table class="ui very basic table">
  <thead>
    <tr>
      <th class="one wide">Selfie</th>
      <th>Name</th>
      <th>Hp</th>
      <th>Attack points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>

      <tr>
        <td><%= image_tag(character.selfie_url, size: "30x30") %></td>
        <td><b><%= character.name %></b></td>
        <td><%= character.hp %></td>
        <td><%= character.attack_points %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_character_path, class: "ui primary button" %>
